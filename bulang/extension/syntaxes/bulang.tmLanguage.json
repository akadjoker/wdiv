{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "BuLang",
  "scopeName": "source.bulang",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#functions" },
    { "include": "#classes" },
    { "include": "#operators" },
    { "include": "#constants" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.bulang",
          "match": "//.*$"
        },
        {
          "name": "comment.block.bulang",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.bulang",
          "match": "\\b(if|else|while|for|do|loop|break|continue|return|goto|gosub|label)\\b"
        },
        {
          "name": "keyword.declaration.bulang",
          "match": "\\b(def|class|var|process|struct)\\b"
        },
        {
          "name": "keyword.other.bulang",
          "match": "\\b(self|super|frame|yield|fiber|exit|include|print)\\b"
        },
        {
          "name": "keyword.operator.logical.bulang",
          "match": "\\b(and|or|not)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.bulang",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.bulang",
              "match": "\\\\(n|t|r|\\\\|\")"
            }
          ]
        },
        {
          "name": "string.quoted.single.bulang",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.bulang",
              "match": "\\\\(n|t|r|\\\\|')"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.bulang",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.bulang",
          "match": "\\b\\d+\\b"
        },
        {
          "name": "constant.numeric.hex.bulang",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.bulang",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)(?=\\s*\\()"
        },
        {
          "name": "entity.name.function.definition.bulang",
          "match": "(?<=def\\s+)([a-zA-Z_][a-zA-Z0-9_]*)"
        }
      ]
    },
    "classes": {
      "patterns": [
        {
          "name": "entity.name.type.class.bulang",
          "match": "(?<=class\\s+)([a-zA-Z_][a-zA-Z0-9_]*)"
        },
        {
          "name": "entity.name.type.process.bulang",
          "match": "(?<=process\\s+)([a-zA-Z_][a-zA-Z0-9_]*)"
        },
        {
          "name": "entity.name.type.struct.bulang",
          "match": "(?<=struct\\s+)([a-zA-Z_][a-zA-Z0-9_]*)"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.bulang",
          "match": "(\\+|\\-|\\*|\\/|%)"
        },
        {
          "name": "keyword.operator.comparison.bulang",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.bulang",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.bitwise.bulang",
          "match": "(&|\\||\\^|~|<<|>>)"
        },
        {
          "name": "keyword.operator.assignment.bulang",
          "match": "(=|\\+=|\\-=|\\*=|\\/=|%=)"
        },
        {
          "name": "keyword.operator.increment.bulang",
          "match": "(\\+\\+|\\-\\-)"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.bulang",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.bulang",
          "match": "\\bnil\\b"
        }
      ]
    }
  }
}